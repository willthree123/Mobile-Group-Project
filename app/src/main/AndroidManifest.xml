                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".currency_converter"
            android:exported="false" />
        <activity
            android:name=".SettingActivity"
            android:exported="false" />
        <activity
            android:name=".FinanceAmountPieChart"
            android:exported="false" />
        <activity
            android:name=".FinanceGraph"
            android:exported="false" />
        <activity
            android:name=".RecordDetailPage"
            android:exported="false" />
        <activity
            android:name=".FinanceMainPage"
            android:exported="false" />
        <activity
            android:name=".FinanceTracker"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>